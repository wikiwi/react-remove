{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./test/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
